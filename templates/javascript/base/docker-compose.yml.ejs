version: '3.9'
services:
  api:
    build: .
    ports:
      - '3333:3333'
    environment:
      NODE_ENV: development
      API_PORT: 3333
      CORS_ORIGIN: '*'
      LOG_LEVEL: info
<% if (features.includes('auth')) { %>
      JWT_SECRET: change-me-access
      JWT_REFRESH_SECRET: change-me-refresh
      ACCESS_TOKEN_TTL: 15m
      REFRESH_TOKEN_TTL: 7d
<% } %>
    volumes:
      - ./:/app
    command: npm run dev
